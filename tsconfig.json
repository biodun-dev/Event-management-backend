{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Output directory for compiled .js files
    "rootDir": "./", // Root directory for your .ts files
    "typeRoots": ["./node_modules/@types", "./types"] // Add your custom types here
  },
  "include": ["**/*.ts"], // Include all TypeScript files in the root and subdirectories
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist
}
